@inherits Langueedu.Web.Components.ComponentBase<TrackCoverViewModel>
@namespace Langueedu.Web.Components

<div class="card hovercard text-center">
    <div class="gradient-info">
    <div class="cardheader socialheader rounded-t-lg"
    style="background-image: url(_content/Langueedu.Web.Pages/assets/images/track_bg.png);"></div>
    </div>

    <div class="user-image flex justify-center">
        <LeAvatar Src="@BindingContext.TrackDetail.PicturePath" />
        <ul class="share-icons"><li>
            <LeButton Color="@Color.Success" Rounded="@Rounded.Full" Class="social-icon p-6">
                <i class="pe-7s-play"></i>
            </LeButton>
        </li><li>
            <LeButton Color="@Color.Danger" Rounded="@Rounded.Full" Class="social-icon p-6">
                <i class="pe-7s-like"></i>
            </LeButton>
        </li>
            <li>
                <LeButton Color="@Color.Primary" Rounded="@Rounded.Full" Class="social-icon p-6">
                    <i class="pe-7s-share"></i>
                </LeButton>
            </li>
        </ul>
    </div>

    <div class="info market-tabs p-0">
        <ul class="nav nav-tabs nav-material tabs-scoial" id="top-tab" role="tablist">
            <li class="nav-item">
                <div class="user-designation"></div>
                <div class="title"><a target="_blank" href="">@BindingContext.TrackDetail.SongTitle</a></div>
                <div class="desc mt-2">@BindingContext.TrackDetail.Artists.GetArtistNames()</div>
            </li>
        </ul>
    </div>
</div>

@code {
        [Parameter]
        public int TrackId { get; set; }
}