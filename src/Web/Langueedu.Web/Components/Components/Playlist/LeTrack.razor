@inherits Langueedu.Components.ComponentBase
@namespace Langueedu.Components
<a href="@Url">
    <div class="playlist">
        <img src="@Track.Images.FirstOrDefault()?.Url" class="playlist__image" />
        <div class="playlist__footer">
            <h3 class="playlist__sont-title title">@Track.Name</h3>
            <h4 class="playlist__artists">@Track.Artists.GetArtistNames()</h4>
        </div>
    </div>
</a>