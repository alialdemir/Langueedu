@namespace Langueedu.Web.Components


<div class="coin-icon">
    <span class=@(IsNegative ? "text-danger text-sm" : "text-success text-xl")>@(IsNegative ? "-" : "+")@Gold</span>
    <img src="_content/Langueedu.Web.Pages/assets/images/double-coin.svg" alt="Double Coin" />
</div>

@code {
    [Parameter]
    public bool IsNegative { get; set; }

    [Parameter]
    public short Gold { get; set; }
}