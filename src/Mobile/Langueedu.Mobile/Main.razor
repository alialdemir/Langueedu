<CascadingAuthenticationState>
    <CascadingBlazoredModal>
        <Router AppAssembly="@GetType().Assembly" AdditionalAssemblies="new[] { typeof(Langueedu.Web.Pages.MainLayout).Assembly}">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Langueedu.Web.Pages.MainLayout)">

                    <Authorizing>
                        <text> Please wait, we are authorizing the user </text>
                    </Authorizing>

                    <NotAuthorized>
                        <text> You are not authoried to access this page </text>
                    </NotAuthorized>
                </AuthorizeRouteView>

            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(Langueedu.Web.Pages.MainLayout)">
                    <p>Sorry, there's nothing at this address.</p>
                </LayoutView>
            </NotFound>
        </Router>
    </CascadingBlazoredModal>
</CascadingAuthenticationState>
